print('\033[35m-=\033[m'*15)
print(' \033[35mDESAFIO 64 - SOMA DE NÚMEROS\033[m')
print('\033[35m-=\033[m'*15)
n = cont = soma = 0
n = int(input('Digite um numero [999 para parar]: '))
while n != 999:
    soma += n
    cont += 1
    n = int(input('Digite um numero [999 para parar]: '))
print('Você digitou {} numeros e a soma deles é {}'.format(cont, soma))
