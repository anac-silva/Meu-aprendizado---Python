print('-=' * 15)
print('   << DESAFIO 103 - GOLS >>  ')
print('-=' * 15)


def ficha(a, b):
    print(f'O jogador {a} fez {b} gols no campeonato. ')


nome = str(input('Nome do jogador: '))
gols = str(input('Quantidade de gols: '))
if nome == '':
    nome = '<desconhecido>'
if gols == '':
    gols = '0'
ficha(nome, gols)
