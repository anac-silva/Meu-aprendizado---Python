print('-=' * 20)
print('<< DESAFIO 40 - APROVADO E REPROVADO >>  ')
print('-=' * 20)
nota = float(input('Digite a primeira nota: '))
nota1 = float(input('Digite a segunda nota: '))
media = (nota + nota1) / 2
if media < 5:
    print('Você foi REPROVADO')
elif 6.9 > media >= 5.0 :
    print('Você está de RECUPERAÇÃO')
elif media > 7.0:
    print('Você está APROVADO!!! PARABÉNS')
